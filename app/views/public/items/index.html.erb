
	<div class="container">
	  <h2>商品一覧</h2>
		<div class="row">
	      <div class="col-md-3 col-sm-3 col-xs-3">
	      	<table class="table">
	      		<thead>
		      		<tr>
		      			<th>ジャンル検索</th>
		      		</tr>
		      		<tr>
		      			<% @items.each do |item| %>
		      			<td><%= item.genre.name %></td>
		      		</tr>
	      		</thead>
	      			<% end %>
	      	</table>
	       </div>

	       <div class="col-md-9 col-sm-9 col-xs-9">
	       	<h3><b>商品一覧</b></h3>
			   <div class="row">
			   	<% @items.each do |item| %>

						<div class="col-md-3 col-sm-3 col-xs-12">
										<%= link_to item_path(item.id) do %>
										<%= attachment_image_tag item, :image , :fill,100 ,100 %><br>
										<%= item.name %><br>
										￥<%= item.price %>
										<% end %>
						</div>
				<% end %>
				</div>
			</div>
		</div>
	</div>

