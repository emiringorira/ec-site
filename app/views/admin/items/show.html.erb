<div class="container">
	<h2>商品詳細</h2>
		<div class="row">
			<div class="col-md-3 col-sm-3 col-xs-12">
					<%= attachment_image_tag @item, :image , :fill,200 ,200  %>
		    </div>
		    	<div class="col-md-6 col-sm-6 col-xs-12">
						<table class="table">
								<tr>
									<td>商品名</td><td><%= @item.name %></td>
								</tr>
								<tr>
									<td>商品説明</td><td><%= @item.introduction %></td>
								</tr>
								<tr>
									<td>ジャンル</td><td><%= @item.genre_id %></td>
								</tr>
								<tr>
									<td>税込価格（税抜価格）</td><td>（<%= @item.price %>）円</td>
								</tr>
								<tr>
									<td>販売ステータス</td><td><%= @item.is_active %></td>
								</tr>
						</table>
				</div>
					<div class="col-md-3 col-sm-3 col-xs-12">
						<%= link_to "編集", edit_admin_item_path(@item) %>
					</div>
		</div>
</div>