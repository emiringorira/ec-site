<div class="row">
  <%= form_for(@genre, url: admin_genres_path) do |f| %>
        <%= f.label :name, 'ジャンル' %>
        <%= f.text_field :name, class:'form-control' %>
        <br>
        <%= f.submit '追加', class: 'btn btn-primary btn-block' %>
  <% end %>
<br>
  <div class="col-xs-9">
      <div class="block-title">
              <table class="table">
                <thead>
                  <tr>
                    <th>ジャンル</th>
                    <th>状態</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                  <% @genres.each do |g| %>
                    <tr>
                      <td>
                        <%= g.name %>
                     </td>
                      <td>
                        <%= g.is_active %>
                      </td>
                      <td>
                        <%= link_to "編集", edit_admin_genre_path(@genre), class: "btn btn-success btn-sm" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
               </table>
            </div>
      </div>
</div>