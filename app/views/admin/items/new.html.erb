<h2>商品新規登録</h2>
<%= form_for(@item, url: admin_items_path) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= @item.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
      <% end %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.attachment_field :image %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group has-icon">
        <label class="control-label sr-only">商品名　</label>
        <%= f.text_field :name, class:"form-control" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <label class="control-label sr-only">商品説明</label>
      <%= f.text_area :introduction, class:"form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <%= f.label :genre, 'ジャンル' %>
      <%= f.select :genre, {'男性': 1, '女性': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <label class="control-label sr-only">税抜価格</label>
      <%= f.text_field :price, class:"form-control" %>円
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <%= f.label :is_active, '販売ステータス' %>
      <%= f.select :is_active, {'販売中': 1, '売切れ': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
    </div>
  </div>



  <hr>
  <%= f.submit "新規登録", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>