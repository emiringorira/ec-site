<%= form_for(@address, url: addresses_path) do |f| %>
	<div class="container">
		<div class="row">
			<h2>配送先登録/一覧</h2>
			 	<div class="col-md-5">
			 		<label>郵便番号（ハイフンなし）</label>
			 		<%= f.text_field :postal_code %><br>

			 		<label>住所</label>
			 		<%= f.text_field :address %><br>

			 		<label>宛名</label>
			 		<%= f.text_field :name %>
			 		<%= f.submit "登録する" %>
			 	</div>
		</div>
	</div>
<% end %>
	<div class="row">
		<div class="col-md-8">
			<table class="table">
				<thead>
					<tr>
						<th>郵便番号</th>
						<th>住所</th>
						<th>宛名</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= @address.postal_code %></td>
						<td><%= @address.address %></td>
						<td><%= @address.name %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>