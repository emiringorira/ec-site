<!DOCTYPE html>
<html>
  <head>
    <title>EcSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <body>
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="row">
      <div class="navbar-header">
        <span class="title">Bookers</span>
      </div>
        <% if public_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <li class="nav-list">
              <%= link_to 'マイページ', end_user_path(current_public), class:"glyphicon glyphicon-user" %>
            </li>
           <li class="nav-list">
              <%= link_to '商品一覧', items_path, class:"glyphicon glyphicon-book" %>
            </li>
            <li class="nav-list">
              <%= link_to "logout", destroy_public_session_path, method: :delete , class:"glyphicon glyphicon-log-out"%>
            </li>
          </ul>
         <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li class="nav-list">
              <%#= link_to 'About', home_about_path, class:"glyphicon glyphicon-link" %>
            </li>
            <li class="nav-list">
              <%= link_to '商品一覧', items_path, class:"glyphicon glyphicon-book" %>
            </li>
            <li class="nav-list">
              <%= link_to "新規登録",new_public_registration_path, class:"glyphicon glyphicon-edit" %>
            </li>
            <li class="nav-list">
              <%= link_to "ログイン",new_public_session_path, class:"glyphicon glyphicon-log-in" %>
            </li>
          </ul>
          <% end %>
      </div>
    </div>
</header>



<div class="container">
  <br>
  <br>
  <br>

  <%= yield %>
</div>
</body>
</html>
